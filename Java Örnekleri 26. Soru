package JavaSorular;
import java.util.Scanner;
public class JavaSoru26 {
	public static Scanner ali;
	public static void main(String[] args) {

		ali = new Scanner(System.in);
		
		int a1,b1,c1;
		
		System.out.println("Birinci sayı giriniz: ");
		a1 = ali.nextInt();
		System.out.println("Birinci sayı giriniz: ");
		b1 = ali.nextInt();
		System.out.println("Birinci sayı giriniz: ");
		c1 = ali.nextInt();
		
		System.out.println("\n" +"Girilen sayıların toplamı :" + (a1+b1+c1) +"\n");
		
		if(a1<b1 && a1<c1)
		{
			System.out.println(a1 +" sayısı en küçüktür.");
		}
		else if(b1<a1 && b1<c1)
		{
			System.out.println(b1+" sayısı en küçüktür");
		}
		else if(c1<a1 && c1<b1)
		{
			System.out.println(c1+" sayısı en küçüktür.");
		}
		
		if(a1>b1 && a1>c1)
		{
			System.out.println(a1 +" sayısı en büyüktür.");
		}
		else if(b1>a1 && b1>c1)
		{
			System.out.println(b1+" sayısı en büyüktür");
		}
		else if(c1>a1 && c1>b1)
		{
			System.out.println(c1+" sayısı en büyüktür.");
		}
		
		System.out.println("\n" + "Girilen sayıların ortalaması :" + (a1+b1+c1)/3);
		
	}	
	

}
